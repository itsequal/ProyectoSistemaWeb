<div class="container p-4">
    <div class="row">
        <div class="col md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                   <h3>Iniciar Sesión</h3>
                </div>
                <div class="card-body">
                    <form action="/login" method="POST">
                        <div class="form-group">
                            <label for="usuario">Usuario</label><br>
                            <input type="text" name="usuario" id="usuario" class="form-control" autofocus required><br>
                            <label for="contraseña">Contraseña</label><br>
                            <input type="password" name="contraseña" id="contraseña" class="form-control" required><br>
                            <button type="submit" class="btn btn-success btn-block">Iniciar</button><br>
                            <p class="p-1">¿No tienes una cuenta?</p> <a href="/signup">Registrate</a>
                        </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>